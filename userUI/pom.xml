    	<artifactId>jersey-container-servlet</artifactId>
    	<version>2.24</version>
	</dependency>
	
	<dependency>
    	<groupId>javax.xml</groupId>
    	<artifactId>jaxb-api</artifactId>
    	<version>2.1</version>
	</dependency>

	<dependency>
        <groupId>javax.servlet</groupId>
        <artifactId>jsp-api</artifactId>
